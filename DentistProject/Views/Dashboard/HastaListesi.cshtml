
@{
    ViewBag.Title = "HastaListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <a class="navbar-brand" href="#">Hasta</a>
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/Dashboard/Hasta">Hasta Listesi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Dashboard/Hasta/Ekle">Hasta Ekle <span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </nav>
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <input class="form-control" type="text" name="q" id="hastaAra" placeholder="Aranacak Hastayı Girin" />
            </div>
        </div>
        <ul class="list-group list-group-flush" id="hastaListesi"></ul>
    </div>
</div>
<script type="text/x-tmpl" id="patientTemplate">
    <li class="list-group-item">
        <div class="media">
            <img class="mr-3 border rounded" src="/Content/images/{{if Gender=='Bay'}}male.png{{else}}female.png{{/if}}" width="100" height="100" alt="Aslı Demiroğ">
            <div class="media-body">
                <h5 class="mt-0 mb-2 font-weight-bold text-uppercase">${NameSurname}</h5>
                <div class="row">
                    <div class="col-md-4">
                        <p class="mb-0 text-nowrap">Doğum Tarihi : <i>${BirthDate}</i></p>
                        <p class="mb-0 text-nowrap">Kan Grubu : <i>${BloodGroup}</i></p>
                        <p class="mb-0 text-nowrap">Cinsiyet : <i class="text-danger">${Gender}</i></p>
                    </div>
                    <div class="col-md-6 col-sm-4">
                        <p class="mb-0 text-nowrap">Telefon : <i>${Telephone}</i></p>
                        <p class="mb-0 text-nowrap">E-Posta : <i>${Email}</i></p>
                    </div>
                    <div class="col-md-2 col-sm-4">
                        <a href="/Dashboard/Hasta/${TCNo}" class="btn btn-block btn-sm btn-warning mt-0"><i class="fa fa-edit"></i> Düzenle</a>
                        <a data-id="${TCNo}" class="btn btn-block btn-sm btn-danger mt-0 text-white btnHastaKaldir"><i class="fa fa-trash-o"></i> Kaldır</a>
                    </div>
                </div>
            </div>
        </div>
    </li>
</script>