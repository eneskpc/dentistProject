@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Giriş Formu - Ümit Sokullu</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/now-ui-dashboard.min.css?v=1.0.1" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="d-flex align-items-center justify-content-center login-container">
        <div class="card border-primary" style="max-width:450px;">
            <div class="card-body text-primary">
                <h5 class="card-title">Giriş Formu</h5>
                <div class="card-text">
                    <div class="form-group">
                        <label for="txtUserName">Kullanıcı Adı</label>
                        <input type="text" id="txtUserName" class="form-control login-input-with-icon" />
                        <i class="now-ui-icons users_circle-08 login-input-icon"></i>
                    </div>
                    <div class="form-group">
                        <label for="txtPassword">Parola</label>
                        <input type="password" id="txtPassword" class="form-control login-input-with-icon" />
                        <i class="now-ui-icons objects_key-25 login-input-icon"></i>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-default text-white" id="btnForgotPassword">Parolanızı unuttunuz mu?</a>
                        <a class="btn btn-warning text-white" id="btnLogin">Giriş Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Scripts/plugins/chartjs.min.js"></script>
    <script src="~/Scripts/plugins/bootstrap-notify.js"></script>
    <script src="~/Scripts/now-ui-dashboard.min.js?v=1.0.1"></script>
    <script src="~/Scripts/functions.js"></script>
    <script src="~/Scripts/Dashboard.js"></script>
</body>
</html>
