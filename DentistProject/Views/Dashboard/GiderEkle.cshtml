
@{
    ViewBag.Title = "Gider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <a class="navbar-brand" href="#">GİDER</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Dashboard/Gider">Gider Listesi</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/Dashboard/Gider/Ekle">Gider Ekle</a>
            </li>
        </ul>
    </nav>
    <div class="card">
        <div class="card-body">
            <div class="loading">
                <i class="fa fa-fw fa-spin fa-circle-o-notch fa-3x text-info"></i>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="gider1">Gider Türü</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <select id="giderTuru" class="form-control"></select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="Tarih">Tarih</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input type="date" class="form-control" id="odemeTarihi">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="od1">Ödenen Tutar</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input type="text" class="form-control" id="odenenTutar">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="aciklama">Açıklama</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input type="text" class="form-control" id="aciklama">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <a id="giderKaydet" class="btn btn-primary text-white">Kaydet</a>
                </div>
            </div>
        </div>
    </div>
</div>

