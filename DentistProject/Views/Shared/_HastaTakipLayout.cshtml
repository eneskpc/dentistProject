                            <li class="nav-item active text-nowrap">
                                <a class="nav-link" href="#">Üye Ol</a>
                            </li>
                        </ul>*@
                    </div>
                </nav>
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
